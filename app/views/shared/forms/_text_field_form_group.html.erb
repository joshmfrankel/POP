<% @form_params.each do |name| %>
  <%= content_tag :div, class: 'form-group' do %>
    <%= label_tag "#{name.to_sym}", "#{name.humanize.capitalize}", class: 'col-sm-2 control-label' %>
    <%= content_tag :div, class: 'col-sm-10' do %>
      <%= f.text_field "#{name.to_sym}", class: 'form-control', placeholder: "#{name.humanize.capitalize}" %>
    <% end %>
  <% end %>
<% end %>
