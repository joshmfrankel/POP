<h1>Listing Journals</h1>

<%= content_tag(:div, class: 'table-responsive') do %>
  <%= content_tag(:table, class: 'table table-striped table-hover') do %>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Editor</th>
        <th>Description</th>
        <th>Impact Factor</th>
        <th>Approved?</th>
        <th>Created By</th>
        <th>Set Approval</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @journals.each do |journal| %>
        <tr data-id="<%= journal.id %>">
          <td></td>
          <td><%= journal.title %></td>
          <td><%= journal.editor %></td>
          <td><%= journal.description %></td>
          <td><%= journal.impact_factor %></td>
          <td data-attribute="approved"><%= journal.approved %></td>
          <td><%= journal.user.email %></td>
          <td><%= link_to("Approve", approve_journal_path(journal), remote: true, method: :put) %></td>
          <td><%= link_to 'Edit', edit_journal_path(journal) %></td>
          <td><%= link_to 'Destroy', journal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
<% end %>

<br>

