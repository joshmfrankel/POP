<p id="notice"><%= notice %></p>

<h1>Listing Methodologies</h1>

<%= content_tag(:div, class: 'table-responsive') do %>
  <%= content_tag(:table, class: 'table table-striped table-hover') do %>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @methodologies.each do |methodology| %>
        <tr>
          <td><%= methodology.name %></td>
          <td><%= link_to 'Show', methodology %></td>
          <td><%= link_to 'Edit', edit_methodology_path(methodology) %></td>
          <td><%= link_to 'Destroy', methodology, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
<% end %>

<br>

<%= link_to 'New Methodology', new_methodology_path %>
